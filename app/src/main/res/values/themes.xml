<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotedgeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ebony_clay</item>
        <item name="colorPrimaryVariant">@color/bunker</item>
        <item name="colorOnPrimary">@color/alice_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_sea_green</item>
        <item name="colorSecondaryVariant">@color/viridian_green</item>
        <item name="colorOnSecondary">@color/alice_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/ebony_clay</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>